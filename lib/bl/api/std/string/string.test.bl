test_str_replace1 :: fn () #test {
	tmp := str_new();
	defer str_delete(&tmp);

	str_clear(&tmp);
	str_append(&tmp, "");
	test_eq(str_replace_all(&tmp, ' ', ','), 0);
	test_eq(tmp, "");

	str_clear(&tmp);
	str_append(&tmp, "1 23 456 7 89 ");
	test_eq(str_replace_all(&tmp, ' ', ','), 5);
	test_eq(tmp, "1,23,456,7,89,");

	str_clear(&tmp);
	str_append(&tmp, "     ");
	test_eq(str_replace_all(&tmp, ' ', ','), 5);
	test_eq(tmp, ",,,,,");
}

test_str_replace2 :: fn () #test {
	tmp := str_new();
	defer str_delete(&tmp);

	str_clear(&tmp);
	str_append(&tmp, "");
	test_eq(str_replace_all(&tmp, ' '), 0);
	test_eq(tmp.len, 0);
	test_eq(tmp, "");

	str_clear(&tmp);
	str_append(&tmp, "     ");
	test_eq(str_replace_all(&tmp, ' '), 5);
	test_eq(tmp.len, 0);
	test_eq(tmp, "");

	str_clear(&tmp);
	str_append(&tmp, " 12  345 6 789     ");
	test_eq(str_replace_all(&tmp, ' '), 10);
	test_eq(tmp.len, 9);
	test_eq(tmp, "123456789");

	str_clear(&tmp);
	str_append(&tmp, " 12  345 6 78     9");
	test_eq(str_replace_all(&tmp, ' '), 10);
	test_eq(tmp.len, 9);
	test_eq(tmp, "123456789");

	str_clear(&tmp);
	str_append(&tmp, "d, d");
	test_eq(str_replace_all(&tmp, ' '), 1);
	test_eq(tmp.len, 3);
	test_eq(tmp, "d,d");
}

